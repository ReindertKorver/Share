<UserControl x:Class="Share.StartMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Share"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid>
        <TextBlock x:Name="Title" Text="Share" VerticalAlignment="Top"  FontWeight="Bold" FontSize="36" Foreground="White" Height="50" Margin="10,350,10,0" Padding="0" TextAlignment="Center"/>
        
        <Image x:Name="Logo" Margin="100" MouseUp="ShowLogin" Source="Image/ic_launcher.png" Cursor="Hand"/>
    </Grid>
</UserControl>
